<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.suwonccc.csmproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <uses-feature android:name="android.hardware.camera2" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <activity
            android:name=".MainActivity"
            android:label="CSMProj"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>

        <activity
            android:name=".Firstpage"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".etcpage.Etcpage_modify_menti"
            android:screenOrientation="portrait"/>
        <activity android:name=".etcpage.Etcpage_modify_mento"
            android:screenOrientation="portrait"/>
        <activity android:name=".etcpage.Etcpage_mymentilist"
            android:screenOrientation="portrait" />
        <activity android:name=".etcpage.Etcpage_mymenti"
            android:screenOrientation="portrait" />
        <activity android:name=".etcpage.Etcpage_mymento"
            android:screenOrientation="portrait"/>
        <activity android:name=".etcpage.Etcpage_disconnect"
            android:screenOrientation="portrait" />
        <activity android:name=".etcpage.Etcpage_nomenti"
            android:screenOrientation="portrait" />
        <activity android:name=".etcpage.Etcpage_nomento"
            android:screenOrientation="portrait" />
        <activity android:name=".mainpage_fragment.MainSearchMentorActivity"
            android:screenOrientation="portrait" />


        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.suwonccc.csmproject"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"
            android:screenOrientation="portrait"/>
    </application>

</manifest>