<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <!-- android:background="#FFFFFF"-->
    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/return_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginTop="19dp"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="69dp"
                    android:layout_height="28dp"
                    android:paddingLeft="30dp"
                    app:srcCompat="@drawable/firstpage_btn21" />

                <TextView
                    android:id="@+id/go_back"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:fontFamily="@font/font"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="내 정보 수정"
                    android:textColor="#666666"
                    android:textSize="19sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="6dp">


                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="74dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="43dp"
                    app:srcCompat="@drawable/etcpage_mento" />

                <FrameLayout
                    android:id="@+id/FrameLayout01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_gravity="center"
                        android:layout_width="186dp"
                        android:layout_height="201dp"
                        app:srcCompat="@drawable/firstpage_btn22" />

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="167dp"
                        android:layout_height="181dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/firstpage_btn10" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="60dp"
                        app:srcCompat="@drawable/firstpage_btn24" />

                </FrameLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:fontFamily="@font/font"
                android:gravity="center_vertical"
                android:paddingLeft="44dp"
                android:text="이름"
                android:textColor="#666666"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/edit_text1"
                android:layout_width="320dp"
                android:layout_height="49dp"

                android:background="@drawable/round_rect"
                android:cursorVisible="false"
                android:inputType="text"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:textColor="#333333"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="나이"
                android:paddingLeft="44dp"
                android:fontFamily="@font/font"
                android:textColor="#666666"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_text2"
                android:layout_width="320dp"
                android:layout_height="49dp"

                android:background="@drawable/round_rect"
                android:cursorVisible="false"
                android:inputType="text"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="학교"
                android:paddingLeft="44dp"
                android:fontFamily="@font/font"
                android:textColor="#666666"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/edit_text3"
                android:layout_width="320dp"
                android:layout_height="49dp"

                android:background="@drawable/round_rect"
                android:cursorVisible="false"
                android:inputType="text"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="전공 및 학과"
                android:paddingLeft="44dp"
                android:fontFamily="@font/font"
                android:textColor="#666666"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_text4"
                android:layout_width="320dp"
                android:layout_height="49dp"

                android:background="@drawable/round_rect"
                android:cursorVisible="false"
                android:inputType="text"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="거주지"
                android:paddingLeft="44dp"
                android:fontFamily="@font/font"
                android:textColor="#666666"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_text5"
                android:layout_width="320dp"
                android:layout_height="49dp"

                android:background="@drawable/round_rect"
                android:cursorVisible="false"
                android:inputType="text"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="이메일"
                android:paddingLeft="44dp"
                android:fontFamily="@font/font"
                android:textColor="#666666"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/edit_text6"
                android:layout_width="320dp"
                android:layout_height="49dp"

                android:background="@drawable/round_rect"
                android:cursorVisible="false"
                android:inputType="text"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="생년월일"
                android:paddingLeft="44dp"
                android:fontFamily="@font/font"
                android:textColor="#666666"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_text7"
                android:layout_width="320dp"
                android:layout_height="50dp"

                android:background="@drawable/round_rect"
                android:cursorVisible="false"
                android:inputType="text"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="인사말"
                android:paddingLeft="44dp"
                android:fontFamily="@font/font"
                android:textColor="#666666"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_text8"
                android:layout_width="320dp"
                android:layout_height="200dp"

                android:background="@drawable/round_rect"
                android:cursorVisible="false"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:paddingLeft="15dp"
                android:paddingTop="13dp"
                android:scrollbars="vertical"
                android:textSize="20sp"
                android:textColor="#333333"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginTop="53dp"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/modify_btn"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:paddingLeft="10dp"
                    app:srcCompat="@drawable/etcpage_modify_btn" />

                <ImageView
                    android:id="@+id/save_btn"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:paddingLeft="10dp"
                    app:srcCompat="@drawable/etcpage_save_btn" />

            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>