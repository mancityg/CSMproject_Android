<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".etcpage.EtcpageFragment">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="match_parent"
        android:background="@color/disconnectBackground"
        android:layout_weight="4"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/go_modify_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingStart="30dp"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:layout_width="69dp"
                android:layout_height="22dp"
                android:paddingLeft="37dp"
                app:srcCompat="@drawable/etcpage_icon1" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@null"
                android:clickable="false"
                android:fontFamily="@font/applesdgothicneoeb"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="내 정보 수정"
                android:textColor="#666666"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/go_meninfo_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="69dp"
                android:layout_height="22dp"
                android:paddingLeft="37dp"
                app:srcCompat="@drawable/etcpage_icon2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@null"
                android:clickable="false"
                android:fontFamily="@font/applesdgothicneoeb"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="멘토/멘티 정보"
                android:textColor="#666666"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/go_universitylife_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="69dp"
                android:layout_height="22dp"
                android:paddingLeft="37dp"
                app:srcCompat="@drawable/etcpage_icon3" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@null"
                android:clickable="false"
                android:fontFamily="@font/applesdgothicneoeb"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="대학생활 둘러보기"
                android:textColor="#666666"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/go_bibleessence_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="69dp"
                android:layout_height="22dp"
                android:paddingLeft="37dp"
                app:srcCompat="@drawable/etcpage_icon4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@null"
                android:clickable="false"
                android:fontFamily="@font/applesdgothicneoeb"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="성경 에센스"
                android:textColor="#666666"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="69dp"
                android:layout_height="22dp"
                android:paddingLeft="37dp"
                app:srcCompat="@drawable/etcpage_icon5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@null"
                android:clickable="false"
                android:fontFamily="@font/applesdgothicneoeb"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="로그아웃"
                android:textColor="#666666"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>