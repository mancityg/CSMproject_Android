<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".firstpage_fragment.LoginProfile">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/firstpage_background_2_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="209dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="131dp"
                android:layout_height="131dp"
                android:background="#00FFFFFF"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/CSMYellow"
                android:src="@drawable/firstpage_btn10" />

<!--            <ImageView-->
<!--                android:id="@+id/profile_border_image"-->
<!--                android:layout_width="131dp"-->
<!--                android:layout_height="131dp"-->
<!--                android:background="#00FFFFFF"-->
<!--                android:scaleType="centerInside"-->
<!--                android:src="@drawable/firstpage_btn22" />-->

            <ImageView
                android:id="@+id/profile_camera_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="#00FFFFFF"
                android:layout_alignBottom="@id/profile_image"
                android:layout_alignParentRight="true"
                android:src="@drawable/firstpage_btn24"
                android:clickable="true"/>

        </RelativeLayout>


        <EditText
            android:id="@+id/address_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="450dp"
            android:layout_marginStart="58dp"
            android:layout_marginEnd="58dp"
            android:background="#00FFFFFF"
            android:hint="거주지"
            android:fontFamily="@font/applesdgothicneom"
            android:textSize="15sp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/email_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="520dp"
            android:layout_marginStart="58dp"
            android:layout_marginEnd="58dp"
            android:background="#00FFFFFF"
            android:hint="이메일"
            android:fontFamily="@font/applesdgothicneom"
            android:textSize="15sp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/birthday_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="587dp"
            android:layout_marginStart="58dp"
            android:layout_marginEnd="58dp"
            android:background="#00FFFFFF"
            android:hint="생년월일"
            android:fontFamily="@font/applesdgothicneom"
            android:textSize="15sp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/greetings_text"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="656dp"
            android:layout_marginStart="58dp"
            android:layout_marginEnd="58dp"
            android:background="#00FFFFFF"
            android:hint="인사말"
            android:fontFamily="@font/applesdgothicneom"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/male_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_marginStart="58dp"
            android:layout_marginEnd="230dp"
            android:layout_marginTop="960dp"
            android:background="@drawable/selector_male_btn"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/female_btn"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_marginStart="230dp"
            android:layout_marginEnd="58dp"
            android:layout_marginTop="960dp"
            android:background="@drawable/selector_female_btn"
            android:scaleType="fitCenter"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/mentor_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="1045dp"
            android:layout_marginEnd="230dp"
            android:background="@drawable/selector_mentor_btn"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/mentee_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_marginStart="230dp"
            android:layout_marginEnd="58dp"
            android:layout_marginTop="1045dp"
            android:background="@drawable/selector_mentee_btn"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="1200dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="300dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/selector_next_btn"
            android:scaleType="fitCenter"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>