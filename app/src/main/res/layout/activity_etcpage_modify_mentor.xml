<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <!-- android:background="#FFFFFF"-->
    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="410dp"
                android:layout_height="match_parent"
                android:layout_marginTop="19dp"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/return_btn"
                    android:layout_width="69dp"
                    android:layout_height="28dp"
                    android:paddingLeft="30dp"
                    app:srcCompat="@drawable/firstpage_btn_back" />

                <TextView
                    android:id="@+id/go_back"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:fontFamily="@font/applesdgothicneoeb"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="내 정보 수정"
                    android:textColor="@color/blackTitle"
                    android:textSize="19sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="74dp"
                android:layout_height="160dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/linearLayout"
                app:layout_constraintTop_toBottomOf="@id/linearLayout"
                app:layout_constraintVertical_chainStyle="packed"
                app:srcCompat="@drawable/etcpage_mentor" />

            <FrameLayout
                android:id="@+id/FrameLayout01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@id/imageView7"
                app:layout_constraintTop_toBottomOf="@id/linearLayout">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="186dp"
                    android:layout_height="201dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/profile_border" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="167dp"
                    android:layout_height="181dp"
                    android:layout_gravity="center"
                    android:src="@drawable/profile_basic" />

                <ImageView
                    android:id="@+id/profile_camera_image"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="60dp"
                    app:srcCompat="@drawable/profile_camera" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:layout_marginTop="300dp"
                android:background="@null"
                android:fontFamily="@font/applesdgothicneoeb"
                android:gravity="center_vertical"
                android:paddingLeft="44dp"
                android:text="이름"
                android:textColor="@color/blackTitle"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edit_text1"
                android:layout_width="320dp"
                android:layout_height="49dp"
                android:background="@drawable/round_rect"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:fontFamily="@font/applesdgothicneom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:fontFamily="@font/applesdgothicneoeb"
                android:gravity="center_vertical"
                android:paddingLeft="44dp"
                android:text="나이"
                android:textColor="@color/blackTitle"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_text1" />

            <EditText
                android:id="@+id/edit_text2"
                android:layout_width="320dp"
                android:layout_height="49dp"
                android:background="@drawable/round_rect"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:fontFamily="@font/applesdgothicneom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:fontFamily="@font/applesdgothicneoeb"
                android:gravity="center_vertical"
                android:paddingLeft="44dp"
                android:text="학교"
                android:textColor="@color/blackTitle"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_text2" />

            <EditText
                android:id="@+id/edit_text3"
                android:layout_width="320dp"
                android:layout_height="49dp"
                android:background="@drawable/round_rect"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:fontFamily="@font/applesdgothicneom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:fontFamily="@font/applesdgothicneoeb"
                android:gravity="center_vertical"
                android:paddingLeft="44dp"
                android:text="전공 및 학과"
                android:textColor="@color/blackTitle"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_text3" />

            <EditText
                android:id="@+id/edit_text4"
                android:layout_width="320dp"
                android:layout_height="49dp"
                android:background="@drawable/round_rect"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:fontFamily="@font/applesdgothicneom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView4" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:fontFamily="@font/applesdgothicneoeb"
                android:gravity="center_vertical"
                android:paddingLeft="44dp"
                android:text="거주지"
                android:textColor="@color/blackTitle"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_text4" />

            <EditText
                android:id="@+id/edit_text5"
                android:layout_width="320dp"
                android:layout_height="49dp"
                android:background="@drawable/round_rect"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:fontFamily="@font/applesdgothicneom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView5" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:fontFamily="@font/applesdgothicneoeb"
                android:gravity="center_vertical"
                android:paddingLeft="44dp"
                android:text="이메일"
                android:textColor="@color/blackTitle"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_text5" />

            <EditText
                android:id="@+id/edit_text6"
                android:layout_width="320dp"
                android:layout_height="49dp"
                android:background="@drawable/round_rect"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:fontFamily="@font/applesdgothicneom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:fontFamily="@font/applesdgothicneoeb"
                android:gravity="center_vertical"
                android:paddingLeft="44dp"
                android:text="생년월일"
                android:textColor="@color/blackTitle"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_text6" />

            <TextView
                android:id="@+id/edit_text7"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:background="@drawable/round_rect"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:fontFamily="@font/applesdgothicneom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView7" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:fontFamily="@font/applesdgothicneoeb"
                android:gravity="center_vertical"
                android:paddingLeft="44dp"
                android:text="인사말"
                android:textColor="@color/blackTitle"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_text7" />

            <EditText
                android:id="@+id/edit_text8"
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:background="@drawable/round_rect"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:paddingLeft="15dp"
                android:paddingTop="13dp"
                android:scrollbars="vertical"
                android:textSize="20sp"
                android:fontFamily="@font/applesdgothicneom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView8" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="230dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/temp_textview"
                app:layout_constraintStart_toStartOf="@id/edit_text8">

                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_save_btn"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/modify_btn"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_modify_btn" />
            </FrameLayout>

            //스크롤뷰 길이 늘리기용

            <TextView
                android:id="@+id/temp_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1400dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>