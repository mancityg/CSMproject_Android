
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- This is for the DatePicker -->
        <item name="android:datePickerStyle">@style/MyDatePicker</item>

    </style>

    <style name="MyPopUp" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textColor">@color/blackTitle</item>
        <item name="android:itemBackground">@drawable/selector_popup</item>
        <item name="android:fontFamily">@font/applesdgothicneom</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:fontFamily">@font/applesdgothicneom</item>
    </style>
</resources>
